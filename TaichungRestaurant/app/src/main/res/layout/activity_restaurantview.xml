<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/architecture"
    tools:context="com.example.s0936.taichungrestaurant.Restaurantview"
    tools:layout_editor_absoluteY="81dp">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/restauranyphoto"
            android:layout_width="match_parent"
            android:layout_height="469dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hole" />

        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="49dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/webButton"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:background="#00000000"
            android:onClick="maptoush"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.996"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/maap" />

        <ImageButton
            android:id="@+id/webButton"
            android:layout_width="49dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/mapButton"
            android:layout_toStartOf="@+id/mapButton"
            android:layout_weight="1"
            android:background="#00000000"
            android:onClick="webtoush"
            app:layout_constraintEnd_toStartOf="@+id/phoneButtond"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/weeb" />

        <ImageButton

            android:id="@+id/phoneButtond"
            android:layout_width="49dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/webButton"
            android:layout_toStartOf="@+id/webButton"
            android:background="#00000000"
            android:onClick="phonetoush"
            app:srcCompat="@drawable/phhone" />


    </RelativeLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phoneButtond"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="476dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
