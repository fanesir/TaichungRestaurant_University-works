<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Centraphoto"
            android:layout_width="match_parent"
            android:layout_height="356dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <TextView
            android:id="@+id/Centraname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="123"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/Centraphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/beitunname"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="40dp"
            android:text="phone"
            android:textSize="1sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Centraweb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/beitunname"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/beitunphone"
            android:layout_toRightOf="@+id/beitunphone"
            android:text="web"
            android:textSize="1sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Centramap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CentrURL"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@+id/Imagetext"
            android:layout_toStartOf="@+id/Imagetext"
            android:text="map"
            android:textSize="1sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/CentrURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Centraphone"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/Centraphone"
            android:layout_toRightOf="@+id/Centraphone"
            android:text="TextView"
            android:textSize="1sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Imagetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Centraname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="TextView"
            android:textSize="1sp"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>